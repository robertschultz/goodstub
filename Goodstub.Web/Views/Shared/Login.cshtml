<div class="pull-right">
    @if (User.Identity.IsAuthenticated) {
        <ul class="nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="/content/image/profile.jpg" class="pull-right" id="login-profile-icon" /><b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="/">
                            <div>
                                <strong>@string.Format("{0} {1}", User.Firstname, User.Lastname)</strong>
                            </div>
                        </a>
                    </li>
                    <li><a href="/signout">Sign Out</a></li>
                </ul>
            </li>
        </ul>
    } else {
        using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "navbar-form" })) {
            <input class="span2" type="text" id="Email" name="Email" placeholder="@Labels.Email">
            <input class="span2" type="password" id="Password" name="Password" placeholder="@Labels.Password">
            <input type="submit" value="@Labels.SignIn" class="btn" />
        }
    }
</div>