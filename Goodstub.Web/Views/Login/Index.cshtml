@model Goodstub.Web.Models.LoginModel
@using (Html.BeginForm()) {
    <fieldset>
        <legend>@Labels.Login</legend>
        @if (!ViewData.ModelState.IsValid) {
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <h4>Alert</h4>
                @Html.ValidationSummary(false)
            </div>
        }
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "input-xlarge" })
        @Html.LabelFor(model => model.Password)
        @Html.TextBoxFor(model => model.Password, new { @class = "input-xlarge" })
        <p>
            <input type="submit" value="@Labels.SignIn" class="btn" />&nbsp;<input type="submit" value="@Labels.CreateAccount" class="btn" />
        </p>
    </fieldset>
}
